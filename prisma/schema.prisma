generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model DonationPackage {
  id          String   @id @default(cuid())
  name        String
  description String
  imageUrl    String
  total       Float
  items       PackageItem[]
  donations   Donation[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PackageItem {
  id                String          @id @default(cuid())
  name              String
  unitPrice         Float
  quantity          Int
  imageUrl          String
  donationPackageId String
  donationPackage   DonationPackage @relation(fields: [donationPackageId], references: [id])
}

model HelpRequest {
  id          String   @id @default(cuid())
  name        String
  phone       String
  location    String
  description String
  approved    Boolean  @default(false)
  needTypes   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Donation {
  id            String   @id @default(cuid())
  amount        Float
  donorName     String
  donorPhone    String
  donorEmail    String?
  type          DonationType
  packageId     String?
  donationPackage DonationPackage? @relation(fields: [packageId], references: [id])
  createdAt     DateTime @default(now())
}

enum DonationType {
  CASH
  PACKAGE
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
